/* pages/shoplist/shoplist.wxss */
.shop{
  display:flex;
  flex-wrap:wrap;
  justify-content:space-between;
  margin-top:10rpx;
}
.shop-item{
  width:48%;
  margin:2rpx 1rpx;
  padding:2rpx;
  display:flex;
  flex-direction:column;
  margin-bottom:30rpx;
  border-bottom:1rpx solid #a9a9a9;
  position:relative;
}
/*2.当前图片*/
.shop-img{
  margin-right:20rpx;
  width:100%;
}
/*文字内容  */
.shop-info{
  display:flex;
  flex-direction: column;
  line-height:1.5;
  color:#666;
  font-size:12px;
}
.shop-month{
  font-size:35rpx;
}
.shop-sheying{
  font-size:28rpx;
  color:#52d0d1;
}
.shop-style{
  color:#52d0d1;
}
/*4.1通用功能：截取字符串并且添加省略号*/
.ell{
  overflow:hidden; /*溢出隐藏*/
  white-space: nowrap; /*不允许换行*/
  text-overflow:ellipsis;  /*省略号*/
}
/*5.打分*/
.shop-star{
  position:absolute;
  right:20rpx;
  top:480rpx;
}
.star-after{
  color:#e2e2e2;  /*底层灰色星星*/
}
.star-before{  /*上层黄色星星*/
  position:absolute; 
  top:0;
  left:0;
  overflow:hidden;
  color:#f19e38; 
}